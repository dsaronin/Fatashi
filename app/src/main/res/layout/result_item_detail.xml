<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="2sp">

    <TextView
        android:id="@+id/itemEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/itemDefinition"
        android:background="@color/colorSecondary200"
        android:fontFamily="sans-serif-black"
        android:paddingHorizontal="4sp"
        android:paddingVertical="10sp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4sp"
        android:background="@color/colorBGray100"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="4sp"
        android:paddingVertical="8sp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4sp"
        android:paddingVertical="2sp"
        android:textSize="16sp"
        android:textColor="@color/colorBGray800"
        android:text="TextView" />

</LinearLayout>